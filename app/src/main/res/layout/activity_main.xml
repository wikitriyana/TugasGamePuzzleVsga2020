                android:padding="15dp"
                android:text="H"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btni"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="7dp"
                android:background="@drawable/bg1"
                android:padding="15dp"
                android:text="I"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnj"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="7dp"
